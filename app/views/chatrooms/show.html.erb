<div class="container my-5">
  <div class="row">
    <div class="col">
      <h1 class="my-3">#<%= @chatroom.name %></h1>
      <div class="my-3">
        <%= simple_form_for [ @chatroom, @message ], remote: true do |f| %>
          <%= f.input :content, label: false, placeholder: "Message for ##{@chatroom.name}" %>
          <%= f.submit %>
        <% end %>
      </div>
      <div id="messages" data-chatroom-id="<%= @chatroom.id %>" class="my-3 border border-light rounded p-3" style="overflow-y: scroll; height: 50vh;">
        <% @chatroom.messages.each do |message| %>
          <div class="message-container" id="message-<%= message.id %>">
            <i class="author">
              <span><%= message.user.nickname %></span>
              <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
            </i>
            <p><%= message.content %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
